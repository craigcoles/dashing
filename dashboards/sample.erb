<% content_for(:title) { "The Chopping Board" } %>

<div class="gridster">
  
  <ul>
    
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="time" data-view="Clock" data-title="Hello"></div>
      <i class="icon-time icon-background"></i>
    </li>
    
    <li data-row="1" data-col="2" data-sizex="2" data-sizey="1">
      <div data-id="twitter_mentions" data-view="Comments" data-moreinfo="Tweets from @wearebeef and co"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="page_views" 
           data-view="Number" 
           data-title="Views"
           data-moreinfo="This Month" style="background-color:#869;"></div>
      <i class="icon-link icon-background"></i>
    </li>
    
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="lastfm" data-view="lastfm"></div>
    </li>
    
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="weather" data-view="Weather"></div>
      <i class="icon-cloud icon-background"></i>
    </li>
    
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cutlets" 
           data-view="Number" 
           data-title="Cutlets"></div>
      <i class="icon-cogs icon-background"></i>
    </li>
    
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="github_user_repos_watchers" data-view="List" data-unordered="true" data-title="Github Repos" style="background-color: #4183C5" data-moreinfo="# of watchers"></div>
    </li>
    
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="github_userinfo_followers" data-title="GitHub Followers" data-view="Number"></div>
      <i class="icon-github-sign icon-background"></i>
    </li>
    
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="github_userinfo_repos" data-title="GitHub Public Repos" data-view="Number"></div>
      <i class="icon-github-sign icon-background"></i>
    </li>
    
  </ul>
  
  <center><div style="font-size: 12px">Try this: curl -d '{ "auth_token": "YOUR_AUTH_TOKEN", "text": "Hey, Look what I can do!" }' \http://<%=request.host%>:<%=request.port%>/widgets/welcome</div></center>
  
</div>